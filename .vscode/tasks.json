{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Regenerate Docs",
            "type": "shell",
            "command": "pdoc",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "--html",
                "--force",
                "--output-dir",
                "./docs/",
                "./pyangstrom/"
            ]
        }
    ]
}